<dc:BorderlessWindows8Window x:Class="Knowte.Common.Services.Dialog.BusyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dc="clr-namespace:Digimezzo.WPFControls;assembly=Digimezzo.WPFControls"
        xmlns:local="clr-namespace:Knowte.Common.Services.Dialog"
        mc:Ignorable="d"
        Height="150" Width="350"
        ResizeMode="NoResize"
        Background="Transparent"
        IsMovable="False"
        Foreground="{DynamicResource RG_BlackBrush}"
        Loaded="BusyDialog_Loaded"
        ShowWindowControls="False">

    <Border Background="{DynamicResource RG_WhiteBrush}" Margin="-1">
        <DockPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
            <dc:ProgressRing DockPanel.Dock="left" VerticalAlignment="Center" Foreground="{DynamicResource RG_AccentBrush}" Width="24" Height="24" Margin="5"/>
            <TextBlock x:Name="Content" Margin="15,0,0,0" VerticalAlignment="Top" TextWrapping="Wrap" FontSize="20" Foreground="{DynamicResource RG_ForegroundBrush}"/>
        </DockPanel>
    </Border>
</dc:BorderlessWindows8Window>
